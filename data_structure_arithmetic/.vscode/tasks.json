    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/opt/rh/devtoolset-7/root/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/main.c",
                "${fileDirname}/arithmetic/*.c",
